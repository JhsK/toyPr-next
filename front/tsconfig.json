{
  "compilerOptions": {
    "allowJs": true, // 자바스크립트 파일도 타입스크립트 체크를 할지
    "target": "ES5",
    "moduleResolution": "Node", // Promise 관련 옵션
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  //"include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
